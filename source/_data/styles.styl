// Custom styles.
.site-meta {
  opacity: 90%;
  padding: 18px 0;
  background-image: url(/images/log-big.jpg);
  @media(min-width: 992px){
  	background-image: url(/images/log-small.jpg);
  }
}
.site-title {
  color: #f5f5f5;
  display: inline-block;
  font-family: fantasy;
  font-size: 1.5em;
  font-weight: normal;
  line-height: 1.5;
  vertical-align: top;
}
.site-brand-container {
  padding: 0;
}
.headband {
  height: 3px;
  background-image: linear-gradient(90deg, #80619c 0%, #53c6f4 15%, #6274dd 30%, #6c76c6 44%, #655f8c 58%, #80619c 72%, #53c6f4 86%, #e2d3cd 100%);
}

.post-body {
  @media (min-width: 1200px){
    font-size: 1em;
  }
  @media (min-width: 1440px){
    font-size: 1.1em;
  }
}
.post-title {
  font-family: serif;
  font-size: 1.8em;
}